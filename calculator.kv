#:import utils kivy.utils

<Button>
    padding: 15
    spacing: 200

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text:"0"
            halign: "right"
            font_size: 120
            size_hint: (1, .15)
            #change the color of the text
            background_color: utils.get_color_from_hex("#2C2C2C")
            foreground_color: utils.get_color_from_hex("#FFFFFF")
        GridLayout:
            cols:4
            rows:5

            #row 1
            Button:
                id: clear
                size_hint: (.2, .2)
                font_size:50
                text: "AC"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.clear()
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "+/-"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.pos_neg()
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "%"
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "/"
                background_normal: ""
                background_color:utils.get_color_from_hex("#FF9500")
                on_press:root.math_sign("/")
            #row 2
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "7"
                on_press: root.button_press("7")
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "8"
                on_press: root.button_press("8")
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "9"
                on_press: root.button_press("9")
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "x"
                on_press: root.math_sign("*")
                background_normal: ""
                background_color:utils.get_color_from_hex("#FF9500")
            #row 3
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "4"
                on_press: root.button_press("4")
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "5"
                on_press: root.button_press("5")
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "6"
                on_press: root.button_press("6")
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "-"
                on_press:root.math_sign("-")
                background_normal: ""
                background_color:utils.get_color_from_hex("#FF9500")
            #row 4
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "1"
                on_press: root.button_press("1")
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "2"
                on_press: root.button_press("2")
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "3"
                on_press: root.button_press("3")
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "+"
                on_press:root.math_sign("+")
                background_normal: ""
                background_color:utils.get_color_from_hex("#FF9500")
            #row 5
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "0"
                on_press: root.button_press("0")
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "."
                on_press:root.dot()
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "."
                on_press: root.button_press(",")
            Button:
                size_hint: (.2, .2)
                font_size:50
                text: "="
                background_normal: ""
                background_color:utils.get_color_from_hex("#FF9500")
                spacing: 20
                padding: 15
                on_press: root.equals()